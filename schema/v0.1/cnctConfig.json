{
    "$schema": "http://json-schema.org/draft-04/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "actions": {
            "type": "array",
            "minItems": 1,
            "items": {
                "oneOf": [
                    {
                        "$ref": "#/definitions/LinkAction"
                    }
                ]
            }
        }
    }, 
    "definitions": {
        "ActionBase": {
            "type": "object",
            "required": [
                "actionType"
            ],
            "properties": {
                "actionType": {
                    "type": "string"
                }
            }
        },
        "DestinationLinks": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                },
                {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string"
                    }
                }
            ]
        },
        "PlatformLinks": {
            "type": "object",
            "properties": {
                "windows": {
                    "$ref": "#/definitions/DestinationLinks"
                },
                "linux": {
                    "$ref": "#/definitions/DestinationLinks"
                },
                "osx": {
                    "$ref": "#/definitions/DestinationLinks"
                }
            }
        },
        "LinkAction": {
            "allOf":[
                {
                    "$ref": "#/definitions/ActionBase"
                },
                {
                    "type": "object",
                    "required": [
                        "links"
                    ],
                    "properties": {
                        "actionType": {
                            "enum": [
                                "link"
                            ]
                        },
                        "links": {
                            "type": "object", 
                            "minItems": 1,
                            "additionalProperties": {
                                "oneOf": [
                                    {
                                        "$ref": "#/definitions/DestinationLinks"
                                    },
                                    {
                                        "$ref": "#/definitions/PlatformLinks"
                                    }
                                ]
                            }
                        }
                    }
                }
            ]
        }
    }
}